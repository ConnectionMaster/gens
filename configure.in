# Check operating system.
case $host in
	*i686*linux*)
		os=linux;
		;;
	*i686*mingw32*)
		os=win32;
		;;
	*)
		AC_MSG_ERROR([Unsupported operating system: $host]);
		;;
esac
AM_CONDITIONAL([LINUX], [test x$os = xlinux])
AM_CONDITIONAL([WIN32], [test x$os = xwin32])

